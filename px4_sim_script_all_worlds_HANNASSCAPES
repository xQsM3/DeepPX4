				[ $launchfile != "HANNASSCAPES_simple_obst_455.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_636.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_847.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_453.launch" ] && \
