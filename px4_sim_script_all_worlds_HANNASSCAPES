				[ $launchfile != "HANNASSCAPES_simple_obst_520.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_452.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_464.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_785.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_349.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_219.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_807.launch" ] && \
