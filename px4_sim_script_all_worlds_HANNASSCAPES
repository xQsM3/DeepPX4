				[ $launchfile != "HANNASSCAPES_simple_obst_774.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_497.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_789.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_881.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_765.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_11.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_866.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_786.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_420.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_580.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_308.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_723.launch" ] && \
				[ $launchfile != "HANNASSCAPES_simple_obst_66.launch" ] && \
